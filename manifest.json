{
    "name": "Stropsy",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Build an Extension!",
    "permissions": ["activeTab", "declarativeContent", "tabs", "storage", "clipboardWrite", "http://*/*", "https://*/*", "file://*/*"],
    "background": {
        "scripts": ["js/jquery.js", "js/background.js", "js/main.js"],
        "persistent": true

    },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>", "https://134.122.6.78/*", "http://134.122.6.78/*", "http://*/*", "https://*/*"],
        "js": ["js/jquery.js", "js/mark.min.js", "js/content.js", "js/popup.js", "libs/fontawesome.min.js"],
        "css": ["css/style.css", "libs/fontawesome.min.css"],
        "run_at": "document_end",
        "web_accessible_resources": [
            "images/*.png",
            "images/*.svg"
        ]
    }],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}